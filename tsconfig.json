{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "downlevelIteration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": false,
    "inlineSources": false,
    "target": "es2015",
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "fullTemplateTypeCheck": false,
    "strictInjectionParameters": true,
    "enableIvy": false
  }
}
